<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <!-- Products Table -->
    <changeSet id="9.0-create-table-products" author="me.oldboy">
        <createTable tableName="products" schemaName="my_market">
            <column name="id" type="BIGINT" defaultValueComputed="nextval('my_market.products_id_seq')">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="product_name" type="VARCHAR(128)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="price" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="fk_products_category_id"
                             references="my_market.categories(category_id)"/>
            </column>
            <column name="brand_id" type="INTEGER">
                <constraints nullable="false"
                             foreignKeyName="fk_products_brand_id"
                             references="my_market.brands(brand_id)"/>
            </column>
            <column name="description" type="VARCHAR(256)">
                <constraints nullable="false"/>
            </column>
            <column name="stock_quantity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="creation_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="TIMESTAMP"/>
        </createTable>
        <rollback>
            <dropTable tableName="products" schemaName="my_market"/>
        </rollback>
    </changeSet>
    <changeSet id="9.5-add-check-constraint-products" author="me.oldboy">
        <comment>Add CHECK-constraint check_time to products table</comment>

        <sql endDelimiter=";">
            ALTER TABLE my_market.products
            ADD CONSTRAINT check_time
            CHECK (modified_at > creation_at);
        </sql>

        <rollback>
            <sql endDelimiter=";">
                ALTER TABLE my_market.products
                DROP CONSTRAINT check_time;
            </sql>
        </rollback>
    </changeSet>
</databaseChangeLog>